<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/relativeLayout2"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/relativeLayout7">

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Connect"
            android:id="@+id/btnConnect"
            android:layout_below="@+id/txtPassword"
            android:layout_alignStart="@+id/txtPassword" />

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Disconnect"
            android:id="@+id/btnDisconnect"
            android:layout_below="@+id/txtPassword"
            android:layout_alignEnd="@+id/txtPassword" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="password (optional):"
            android:id="@+id/textView"
            android:layout_marginLeft="20dp"
            android:textSize="14dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/txtPassword" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txtPassword"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name of Device"
            android:id="@+id/txtName"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="null"
            android:id="@+id/txtRSSI"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_alignTop="@+id/txtName"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAC Address"
            android:id="@+id/txtMac"
            android:layout_below="@+id/txtName"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sBeacon"
            android:id="@+id/txtTypeSBeacon"
            android:layout_marginTop="24dp"
            android:layout_alignTop="@+id/txtMac"
            android:layout_alignStart="@+id/txtMac"
            android:layout_marginBottom="20dp"
            android:textSize="9dp"
            android:textStyle="italic"
            android:textColor="#c5c5c5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="iBeacon"
            android:id="@+id/txtTypeIBeacon"
            android:layout_alignTop="@+id/txtTypeSBeacon"
            android:layout_toEndOf="@+id/txtTypeSBeacon"
            android:layout_marginLeft="5dp"
            android:textSize="9dp"
            android:textStyle="italic"
            android:textColor="#c5c5c5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EddystoneUID"
            android:id="@+id/txtTypeEddystoneUID"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@+id/txtTypeIBeacon"
            android:layout_toEndOf="@+id/txtTypeIBeacon"
            android:textSize="9dp"
            android:textStyle="italic"
            android:textColor="#c5c5c5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EddystoneURL"
            android:id="@+id/txtTypeEddystoneURL"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@+id/txtTypeEddystoneUID"
            android:layout_toEndOf="@+id/txtTypeEddystoneUID"
            android:textSize="9dp"
            android:textStyle="italic"
            android:textColor="#c5c5c5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EddystoneTLM"
            android:id="@+id/txtTypeEddystoneTLM"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@+id/txtTypeEddystoneURL"
            android:layout_toEndOf="@+id/txtTypeEddystoneURL"
            android:textSize="9dp"
            android:textStyle="italic"
            android:textColor="#c5c5c5" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout3"
            android:layout_below="@+id/txtTypeIBeacon"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sBeacon"
                android:id="@+id/textView2"
                android:layout_marginTop="5dp"
                android:layout_alignTop="@+id/txtMac"
                android:layout_alignStart="@+id/txtMac"
                android:layout_marginBottom="5dp"
                android:textSize="15dp"
                android:textStyle="normal"
                android:textColor="#c5c5c5"
                android:layout_marginLeft="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sBeacon ID: "
                android:id="@+id/textView3"
                android:textSize="10dp"
                android:textColor="#c5c5c5"
                android:layout_marginLeft="24dp"
                android:layout_alignStart="@+id/textView2"
                android:layout_below="@+id/textView2"
                android:textIsSelectable="false"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="null"
                android:id="@+id/textView5"
                android:textSize="10dp"
                android:textColor="#c5c5c5"
                android:layout_marginLeft="10dp"
                android:textIsSelectable="false"
                android:layout_below="@+id/textView2"
                android:layout_toEndOf="@+id/textView3" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout4"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="iBeacon"
            android:id="@+id/textView6"
            android:layout_marginTop="5dp"
            android:layout_alignTop="@+id/txtMac"
            android:layout_alignStart="@+id/txtMac"
            android:layout_marginBottom="5dp"
            android:textSize="15dp"
            android:textStyle="normal"
            android:textColor="#c5c5c5"
            android:layout_marginLeft="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UUID:"
            android:id="@+id/textView7"
            android:textSize="10dp"
            android:textColor="#c5c5c5"
            android:layout_marginLeft="24dp"
            android:layout_alignStart="@+id/textView6"
            android:layout_below="@+id/textView6"
            android:textIsSelectable="false"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="null"
            android:id="@+id/textView8"
            android:textSize="10dp"
            android:textColor="#c5c5c5"
            android:layout_marginLeft="10dp"
            android:textIsSelectable="false"
            android:layout_below="@+id/textView6"
            android:layout_toEndOf="@+id/textView7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Major ID:"
            android:id="@+id/textView20"
            android:textSize="10dp"
            android:textColor="#c5c5c5"
            android:layout_marginLeft="0dp"
            android:textIsSelectable="false"
            android:layout_below="@+id/textView8"
            android:layout_alignStart="@+id/textView7"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="null"
            android:id="@+id/textView18"
            android:textSize="10dp"
            android:textColor="#c5c5c5"
            android:layout_marginLeft="10dp"
            android:textIsSelectable="false"
            android:layout_alignBaseline="@+id/textView20"
            android:layout_alignBottom="@+id/textView20"
            android:layout_toEndOf="@+id/textView20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minor ID:"
            android:id="@+id/textView21"
            android:textSize="10dp"
            android:textColor="#c5c5c5"
            android:textIsSelectable="false"
            android:layout_alignTop="@+id/textView18"
            android:layout_toEndOf="@+id/textView18"
            android:layout_marginLeft="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="null"
            android:id="@+id/textView22"
            android:textSize="10dp"
            android:textColor="#c5c5c5"
            android:textIsSelectable="false"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/textView8"
            android:layout_toEndOf="@+id/textView21" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout5"
        android:layout_below="@+id/relativeLayout4"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EddyStone UID"
            android:id="@+id/textView9"
            android:layout_marginTop="5dp"
            android:layout_alignTop="@+id/txtMac"
            android:layout_alignStart="@+id/txtMac"
            android:layout_marginBottom="5dp"
            android:textSize="15dp"
            android:textStyle="normal"
            android:textColor="#c5c5c5"
            android:layout_marginLeft="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UID Namespace:"
            android:id="@+id/textView10"
            android:textSize="10dp"
            android:textColor="#c5c5c5"
            android:layout_marginLeft="24dp"
            android:layout_alignStart="@+id/textView9"
            android:layout_below="@+id/textView9"
            android:textIsSelectable="false"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="null"
            android:id="@+id/textView11"
            android:textSize="10dp"
            android:textColor="#c5c5c5"
            android:layout_marginLeft="10dp"
            android:textIsSelectable="false"
            android:layout_below="@+id/textView9"
            android:layout_toEndOf="@+id/textView10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UID Instance:"
            android:id="@+id/textView23"
            android:textSize="10dp"
            android:textColor="#c5c5c5"
            android:layout_marginLeft="0dp"
            android:textIsSelectable="false"
            android:layout_below="@+id/textView11"
            android:layout_alignStart="@+id/textView10"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="null"
            android:id="@+id/textView24"
            android:textSize="10dp"
            android:textColor="#c5c5c5"
            android:layout_marginLeft="10dp"
            android:textIsSelectable="false"
            android:layout_below="@+id/textView11"
            android:layout_toEndOf="@+id/textView10" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout6"
        android:layout_below="@+id/relativeLayout5"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EddyStone URL"
            android:id="@+id/textView12"
            android:textSize="15dp"
            android:textStyle="normal"
            android:textColor="#c5c5c5"
            android:layout_marginLeft="24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="URL:"
            android:id="@+id/textView13"
            android:textSize="10dp"
            android:textColor="#c5c5c5"
            android:layout_marginLeft="24dp"
            android:layout_alignStart="@+id/textView12"
            android:layout_below="@+id/textView12"
            android:textIsSelectable="false"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="null"
            android:id="@+id/textView14"
            android:textSize="10dp"
            android:textColor="#c5c5c5"
            android:layout_marginLeft="10dp"
            android:textIsSelectable="false"
            android:layout_below="@+id/textView12"
            android:layout_toEndOf="@+id/textView13" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout7"
        android:layout_below="@+id/relativeLayout6"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eddystone TLM"
            android:id="@+id/textView15"
            android:layout_marginTop="5dp"
            android:layout_alignTop="@+id/txtMac"
            android:layout_alignStart="@+id/txtMac"
            android:layout_marginBottom="5dp"
            android:textSize="15dp"
            android:textStyle="normal"
            android:textColor="#c5c5c5"
            android:layout_marginLeft="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Battery Usage:"
            android:id="@+id/textView16"
            android:textSize="10dp"
            android:textColor="#c5c5c5"
            android:layout_marginLeft="24dp"
            android:layout_alignStart="@+id/textView15"
            android:layout_below="@+id/textView15"
            android:textIsSelectable="false"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="null"
            android:id="@+id/textView17"
            android:textSize="10dp"
            android:textColor="#c5c5c5"
            android:layout_marginLeft="10dp"
            android:textIsSelectable="false"
            android:layout_below="@+id/textView15"
            android:layout_toEndOf="@+id/textView16" />
    </RelativeLayout>

</RelativeLayout>